---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";

import Capa from "../components/Capa.astro";
import Destaques from "../components/Destaques.astro";
import Section from "../components/Section.astro";
import CardTurmas from "../components/CardTurmas.astro";
import CardEbooks from "../components/CardEbooks.astro";
import CardAprovacoes from "../components/CardAprovacoes.astro";
import CardDepoimentos from "../components/CardDepoimentos.astro";

import capa from "../img/capa catalise.png";

const texto =
  "Acreditamos que a educação é a chave para desbloquear o potencial de toda pessoa e, com tecnologia, ética e excelência, estamos dedicados a prepará-los para os desafios que os aguardam.";
---

<Layout title="Catálise" description="Catálise cursos">
  <main class="container">
    <div class="testeGsap">
      <div class="box green"></div>
      <div class="box purple"></div>
      <div class="box orange"></div>
    </div>
    <Capa
      title="Uma frase bacana"
      destaque=" Aqui!"
      botao="Conheça nossas turmas"
    >
      <p class="txt-capa" slot="conteudo">
        {texto}
      </p>
      <Image src={capa} alt="Capa do Catálise" class="img-capa" slot="imagem" />
    </Capa>
    <Destaques
      img
      titulo1="Embasamento Completo"
      texto1="Matemática Básica, Física Básica e Produtividade nos estudos, que irá te preparar de forma exclusiva para o ITA."
      titulo2="Modelo Microlearning"
      texto2="Aulas divididas por frentes, disponibilizadas em Módulos e no formato 'Microlearning', que te levarão até o nível do ITA."
      titulo3="Listas de Exercícios"
      texto3="Após cada aula e ao final do assunto, que te ajudarão a fixar o conteúdo e a se preparar para as provas."
      titulo4="Plantão de dúvidas"
      texto4="Te dará suporte de Segunda a Sexta para tirar todas as suas dúvidas e garantir que você esteja sempre preparado."
    />
    <Section
      estilo="claro"
      tag="Turmas"
      titulo="Conheça nossas turmas"
      subtitulo="LorenIpsum dolor sit amet consectetur adipisicing elit. Quaerat consectetur facilis molestias repudiandae reiciendis temporibus suscipit."
      botao="Conheça nossas turmas"
    >
      <div class="swiper swiper-container">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <CardTurmas
              estilo="grande"
              tag="Turma"
              turma="ITA/IME"
              capa="/imagens/itaime.png"
            />
          </div>
          <div class="swiper-slide">
            <CardTurmas
              estilo="grande"
              tag="Turma"
              turma="PRÉ ITA/IME"
              capa="/imagens/itaime.png"
            />
          </div>
          <div class="swiper-slide">
            <CardTurmas
              estilo="grande"
              tag="Revisão"
              turma="ITA/IME"
              capa="/imagens/itaime.png"
            />
          </div>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    </Section>
    <Section
      estilo=""
      tag="Materiais"
      titulo="Os melhores materiais para sua preparação"
      subtitulo=""
      link="Conheça nossos materiais"
      colunas="col4"
    >
      <CardEbooks
        capa="/imagens/ebook biblia para o ita.png"
        tag="Ebook"
        material="A Biblia para o ITA"
      />
      <CardEbooks
        capa="/imagens/ebook miscelanea ita.png"
        tag="Miscelânea"
        material="Miscelâneas ITA"
      />
      <CardEbooks
        capa="/imagens/ebook miscelanea ime.png"
        tag="Miscelânea"
        material="Miscelâneas IME"
      />
      <CardEbooks
        capa="/imagens/ebook miscelanea afa.png"
        tag="Miscelânea"
        material="Miscelâneas AFA"
      />
      <CardEbooks
        capa="/imagens/ebook bizuario quimica geral 1.png"
        tag="Bizuário"
        material="Química Geral 1"
      />
      <CardEbooks
        capa="/imagens/ebook bizuario quimica geral 2.png"
        tag="Bizuário"
        material="Química Geral 2"
      />
      <CardEbooks
        capa="/imagens/ebook bizuario fisico quimica.png"
        tag="Bizuário"
        material="Físico Química"
      />
      <CardEbooks
        capa="/imagens/ebook bizuario reacoes organicas.png"
        tag="Bizuário"
        material="Reações Orgânicas"
      />
    </Section>
    <Section
      estilo="claro aprovacoes"
      tag="Aprovações"
      titulo="Um textinho motivacional bacana"
      subtitulo="LorenIpsum dolor sit amet consectetur adipisicing elit. Quaerat consectetur facilis molestias repudiandae reiciendis temporibus suscipit."
    >
      <div class="swiper swiper-aprovacoes">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <CardAprovacoes
              capa="/imagens/Aprovado João Matheus"
              tag="Aprovado ITA"
              aprovado="João Matheus"
            />
          </div>
          <div class="swiper-slide">
            <CardAprovacoes
              capa="/imagens/Aprovado Arnóbio Tomaz"
              tag="Aprovado ITA"
              aprovado="Arnóbio Tomaz "
            />
          </div>
          <div class="swiper-slide">
            <CardAprovacoes
              capa="/imagens/Aprovado Bruno Mentor"
              tag="Aprovado ITA"
              aprovado="Bruno Mentor"
            />
          </div>
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </Section>
    <Capa
      title="Uma frase bacana"
      destaque=" Aqui!"
      botao="Conheça nossas turmas"
    >
      <p class="txt-capa" slot="conteudo">
        {texto}
      </p>
      <Image src={capa} alt="Capa do Catálise" class="img-capa" slot="imagem" />
    </Capa>
    <Section
      estilo="claro"
      tag="Depoimentos"
      titulo="Conheça a opinião dos nossos alunos"
      subtitulo="LorenIpsum dolor sit amet consectetur adipisicing elit. Quaerat consectetur facilis molestias repudiandae reiciendis temporibus suscipit."
    >
      <div class="depoimentos">
        <CardDepoimentos />
      </div>
    </Section>
  </main>
</Layout>
<script>
  import { gsap } from "gsap";
  import { Swiper } from "swiper";
  import { Navigation, Pagination, Mousewheel } from "swiper/modules";
  import "swiper/css";
  import "swiper/css/navigation";
  import "swiper/css/pagination";
  gsap.fromTo(
    ".box",
    {
      backgroundColor: "cyan",
      scale: 0,
    },
    {
      backgroundColor: "blue",
      duration: 1,
      repeat: -1,
      yoyo: true,
      scale: 1,
    }
  );
  new Swiper(".swiper-container", {
    slidesPerView: "auto",
    spaceBetween: 20,
    modules: [Navigation],
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
  new Swiper(".swiper-aprovacoes", {
    slidesPerView: 1.4,
    spaceBetween: 20,
    direction: "vertical",
    centeredSlides: true,
    mousewheel: true,
    modules: [Pagination, Mousewheel],
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  });
</script>
<style>
  .testeGsap {
    display: none;
  }
  .swiper {
    min-height: 27rem;
  }
  .swiper-container {
    margin-top: 1rem;
    padding: 0 3rem;
  }
  .swiper-container .swiper-slide {
    width: 18rem;
    height: 28rem;
    height: auto;
    place-self: center;
    border-radius: 1rem;
    box-shadow: 0.5rem 0.5rem 1.2rem -0.6rem rgba(0, 0, 0, 0.15);
  }
  .swiper-button-prev,
  .swiper-button-next {
    width: 5rem;
    height: 5rem;
    background: var(--clr-ice);
    border-radius: 5rem;
    box-shadow: 0 0.1rem 2rem hsl(0, 0%, 60%);
    margin: -2.8rem 1rem;
  }
  .swiper-button-prev:after,
  .swiper-button-next:after {
  }
  .swiper-aprovacoes {
    height: -webkit-fill-available;
    position: absolute;
  }
</style>
