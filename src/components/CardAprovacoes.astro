---
import Botao from "./Botao.astro";
const { capa, tag, aprovado, video } = Astro.props;
//grande, pequeno
---

<div class="card">
  <div class="capa">
    <img src={capa} alt="Capa da material" class="capa" />
  </div>
  <div class="texto">
    <span>{tag}</span>
    <h1>{aprovado}</h1>
    <Botao estilo="video" texto="Textinho bacana" />
  </div>
</div>

<style scoped define:vars={{ capa }}>
  .card {
    overflow: hidden;
  }
  .capa {
    width: 100%;
    height: auto;
  }
  .texto {
    display: flex;
    flex-direction: column;
    place-items: center;
    place-content: center;
    padding: 1rem 3rem 3rem 3rem;
  }
  span {
    color: hsl(200, 9%, 13%);
    font-family: GothamSSm-Bold;
  }
  h1 {
    font-family: GothamSSm-Black;
    font-size: 1.4rem;
    margin-top: 0.5rem;
    margin-bottom: 2rem;
  }
</style>
