---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

import Botao from "./Botao.astro";

interface Props {
  materiais: CollectionEntry<"produtos">;
  swiper?: boolean;
  page: string;
}

const { materiais, swiper, page } = Astro.props;

const filtro = materiais.data.content.filter((item) =>
  item.page.includes(page)
);
---

{
  !swiper &&
    filtro.map((material) => (
      <div class="card">
        <div class="capa">
          <Image src={material.img} alt="Capa da material" width="220" />
        </div>
        <div class="texto">
          <span class={material.tag.toLowerCase()}>{material.tag}</span>
          <h1>{material.nome}</h1>
          <Botao
            estilo="outline-claro pequeno"
            texto="Saiba mais"
            link={material.link}
          />
        </div>
      </div>
    ))
}{
  swiper && (
    <div class="Swiper swiper-materiais">
      <div class="swiper-wrapper">
        {filtro.map((material) => (
          <div class="swiper-slide">
            <div class="card">
              <div class="capa">
                <Image src={material.img} alt="Capa da material" width="230" />
              </div>
              <div class="texto">
                <span class={material.tag.toLowerCase()}>{material.tag}</span>
                <h1>{material.nome}</h1>
                <Botao
                  estilo="outline-claro pequeno"
                  texto="Saiba mais"
                  link={material.link}
                />
              </div>
            </div>
          </div>
        ))}
      </div>
      <div class="swiper-button-next" />
      <div class="swiper-button-prev" />
    </div>
  )
}
<script>
  import Swiper from "swiper";
  import "swiper/css";
  import "swiper/css/navigation";

  import { Navigation } from "swiper/modules";

  const swiper = new Swiper(".swiper-materiais", {
    modules: [Navigation],
    speed: 300,
    simulateTouch: false,
    slidesPerView: 4,
    spaceBetween: 24,
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
</script>
<style scoped>
  .swiper-materiais {
    position: relative;
    overflow: hidden;
    padding: 1rem 0;
    width: -webkit-fill-available;
  }
  .swiper-slide {
    width: 18rem;
    place-self: center;
    border-radius: 1rem;
  }
  .swiper-button-next,
  .swiper-button-prev {
    width: 2.5rem;
    height: 2.5rem;
    background: var(--clr-dblue);
    border-radius: 10rem;
    margin: -2.5rem 0rem;
    backdrop-filter: blur(0.3rem);
    border: 0.18rem solid var(--clr-green);
  }
  .swiper-button-next,
  .swiper-rtl .swiper-button-prev {
    right: 0rem;
  }
  .swiper-button-prev,
  .swiper-rtl .swiper-button-next {
    left: var(--swiper-navigation-sides-offset, 0rem);
  }
  .swiper-button-next::after,
  .swiper-button-prev::after {
    font-size: clamp(0.9rem, 1.2vw, 1.4rem);
    font-weight: 900;
    color: var(--clr-green);
  }
  .card {
    display: flex;
    flex-direction: column;
    place-items: center;
    overflow: hidden;
  }
  .texto {
    display: flex;
    flex-direction: column;
    place-items: center;
    place-content: center;
    padding: 1rem;
  }
  span {
    font-family: var(--font-bold);
    font-size: clamp(0.9rem, 1.2vw, 0.9rem);
  }
  .ebook {
    color: hsl(52, 93%, 52%);
  }
  .bizuários {
    color: hsl(215, 99%, 65%);
  }
  .miscelânea {
    color: var(--clr-green);
  }
  h1 {
    font-family: var(--font-book);
    font-size: clamp(0.9rem, 1.2vw, 1.1rem);
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }
</style>
