---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  serv: CollectionEntry<"produtos">;
  page: string;
}

const { serv, page } = Astro.props;

const filtro = serv.data.content.filter((item) => item.page.includes(page));
---

{
  filtro.map((servs) => (
    <div class={"cardserv"}>
      <Image class="img" src={servs.img} alt={servs.tag} width="120" />
      <div class="texto">
        <h2>{servs.tag}</h2>
        <p>{servs.nome}</p>
      </div>
    </div>
  ))
}

<style scoped>
  .cardserv {
    background-color: var(--clr-dblue);
    border-radius: 1rem;
    overflow: hidden;
  }
  .img {
    padding-top: 2rem;
  }
  .texto {
    display: flex;
    flex-direction: column;
    padding: 1.6rem;
  }
  h2 {
    color: var(--clr-green);
    margin-top: 0.5rem;
    text-align: left;
  }
  p {
    color: var(--clr-ice);
    font-family: var(--font-book);
    margin-top: 1rem;
    line-height: 1.5;
    text-align: left;
  }
</style>
