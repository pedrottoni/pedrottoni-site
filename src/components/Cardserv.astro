---
const { capa, tag, nome, sobre } = Astro.props;
//grande, pequeno
---

<div class={"cardserv "}>
  <div class="capa">
    <img
      src={capa}
      alt="Capa da turma"
      width="120"
    />
  </div>
  <div class="texto">
    <h2>{nome}</h2>
    <p>{sobre}</p>
  </div>
</div>

<style scoped>
  .cardserv {
    background-color: var(--clr-dblue);
    border-radius: 1rem;
    overflow: hidden;
  }
  .capa {
    padding-top: 2rem;
  }
  .texto {
    display: flex;
    flex-direction: column;
    padding: 1.6rem;
  }
  h2 {
    color: var(--clr-green);
    margin-top: 0.5rem;
    text-align: left;
  }
  p {
    color: var(--clr-ice);
    font-family: var(--font-book);
    margin-top: 1rem;
    line-height: 1.5;
    text-align: left;
  }
</style>
